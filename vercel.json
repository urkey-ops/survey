// FILE: vercel.json
{
  "version": 2,
  
  // UPDATED: ADDED the 'builds' section to tell Vercel to run the Tailwind script
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run tw:build"
      }
    }
  ],
  
  "rewrites": [
    {
      "source": "/api/submit-survey",
      "destination": "/api/submit-survey.js"
    },
    {
      "source": "/api/sync-analytics",
      "destination": "/api/sync-analytics.js"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/index.html",
      "permanent": true
    }
  ],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
